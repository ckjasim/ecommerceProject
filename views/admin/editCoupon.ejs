        <script>
            function checkValidity() {
                var codeError = document.getElementById('codeError').textContent;
                var nameError = document.getElementById('nameError').textContent;
                var descriptionError = document.getElementById('descriptionError').textContent;
                var percentageError = document.getElementById('percentageError').textContent;
                var minAmountError = document.getElementById('minAmountError').textContent;
                var submitButton = document.getElementById('submitButton');
        
                if (
                    codeError === "" &&
                    nameError === "" &&
                    descriptionError === "" &&
                    percentageError === "" &&
                    minAmountError === ""
                ) {
                    submitButton.disabled = false;
                } else {
                    submitButton.disabled = true;
                }
            }
        
            function validateCode() {
                var codeValue = document.getElementById('couponCode').value.trim();
                var codeError = document.getElementById('codeError');

                var codePattern = /^[a-zA-Z0-9]+$/;
        
                if (!codeValue || !codePattern.test(codeValue)) {
                    codeError.textContent = 'Invalid code provided';
                } else {
                    codeError.textContent = '';
                }
        
                checkValidity();
            }
        
            function validateName() {
                var couponName = document.getElementById('couponName').value.trim();
                var nameError = document.getElementById('nameError');

                var namePattern = /^[a-zA-Z\s'-]+$/;
        
                if (!couponName || !namePattern.test(couponName)) {
                    nameError.textContent = 'Enter a valid name';
                } else {
                    nameError.textContent = '';
                }
        
                checkValidity();
            }
        
            function validateDescription() {
                var description = document.getElementById('couponDescription').value.trim();
                var descriptionError = document.getElementById('descriptionError');

                var descriptionPattern = /^[\w\s',.!?()-]+$/;
        
                if (!description || !descriptionPattern.test(description)) {
                    descriptionError.textContent = 'Invalid description provided';
                } else {
                    descriptionError.textContent = '';
                }
        
                checkValidity();
            }
        
            function validatePercentage() {
                var percentageValue = document.getElementById('couponPercentage').value.trim();
                var percentageError = document.getElementById('percentageError');

                var percentagePattern = /^100(?:\.0+)?%?$|^\d{0,2}(?:\.\d+)?%?$/;
        
                if (!percentageValue || !percentagePattern.test(percentageValue)) {
                    percentageError.textContent = 'Invalid percentage provided';
                } else {
                    percentageError.textContent = '';
                }
        
                checkValidity();
            }
        
            function validateMinAmount() {
                var minAmount = document.getElementById('couponMinAmount').value.trim();
                var minAmountError = document.getElementById('minAmountError');

                var minAmountPattern = /^[0-9]+(\.[0-9]+)?$/;
        
                if (!minAmount || !minAmountPattern.test(minAmount)) {
                    minAmountError.textContent = 'Enter a valid number';
                } else {
                    minAmountError.textContent = '';
                }
        
                checkValidity();
            }

            function validateMaxAmount() {
                var maxAmount = document.getElementById('couponMaxAmount').value.trim();
                var maxAmountError = document.getElementById('maxAmountError');
     
                var maxAmountPattern = /^[0-9]+(\.[0-9]+)?$/;
        
                if (!maxAmount || !maxAmountPattern.test(maxAmount)) {
                    maxAmountError.textContent = 'Enter a valid number';
                } else {
                    maxAmountError.textContent = '';
                }
        
                checkValidity();
            }
        
    
            document.getElementById('couponCode').addEventListener('input', validateCode);
            document.getElementById('couponName').addEventListener('input', validateName);
            document.getElementById('couponDescription').addEventListener('input', validateDescription);
            document.getElementById('couponPercentage').addEventListener('input', validatePercentage);
            document.getElementById('couponMinAmount').addEventListener('input', validateMinAmount);
            document.getElementById('couponMaxAmount').addEventListener('input', validateMaxAmount);

        </script>
        

           

        
    
