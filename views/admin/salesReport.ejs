        <script>
            document.getElementById('downloadPdfBtn').addEventListener('click', function() {
              // Create jsPDF instance
              var doc = new jsPDF();
              
              // Get table HTML
              var table = document.getElementById('myTable');
              
              // Convert table to data URL
              var tableDataURL = table.toDataURL('image/png');
              
              // Add image of table to PDF
              doc.addImage(tableDataURL, 'PNG', 10, 10, 180, 0);
              
              // Save the PDF
              doc.save('table.pdf');
            });
            </script>

            <!--    -------------------sort -->


            <script>
                const selectElement = document.getElementById('sort');
                selectElement.addEventListener('change', handleChange);
            
                function handleChange(event) {
                    const selectedValue = event.target.value;
                    console.log(selectedValue);
            
                    axios.post('/filterSalesReport', { selectedValue })
                        .then(function(response) {
                            const { filter } = response.data;
                            console.log(filter);
                            const productContainer = document.getElementById('productContainer');
                            let productHTML = '';
            
                            filter.forEach(order => {
                                const expirationDate = new Date(order.orderedAt);
                                productHTML += `
                                    <tr>
                                        <td>prinDecorFRGDSDS</td>
                                        <td>${order.userId.fName}</td>
                                        <td>${expirationDate.getDate()}/${expirationDate.getMonth() + 1}/${expirationDate.getFullYear()}</td>
                                        <td>0</td>
                                        <td>0</td>
                                        <td>${order.products[0].totalAmount}</td>
                                        <td>${order.paymentOption}</td>
                                    </tr>
                                `;
                            });
            
                            productContainer.innerHTML = productHTML;
                        })
                        .catch(function(error) {
                            console.error('Error:', error);
                        });
                }
            </script>
