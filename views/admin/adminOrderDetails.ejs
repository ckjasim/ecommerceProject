        <script>
            
                // ---------------------alreadySelected--------------
                function setInitialOrderStatus() {
                const selectElements = document.querySelectorAll('.orderStatusChange');

                selectElements.forEach(selectElement => {

                    const row = selectElement.closest('tr');
                    const currentOrderStatus = row.querySelector('.orderStatus').innerText;

                    selectElement.querySelectorAll('option').forEach(option => {
                        if (option.value === currentOrderStatus) {
                            option.selected = true;
                        }
                    });
                });
                }

                window.addEventListener('DOMContentLoaded', setInitialOrderStatus);

        </script>

