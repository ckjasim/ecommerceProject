        if (
            nameError === "" &&
            quantityError === "" &&
            colorError === "" &&
            sizeError === "" &&
            materialError === "" &&
            priceError === "" &&
            descriptionError === ""
        
        ) {
            submitButton.disabled = false;
        } else {
            submitButton.disabled = true;
        }
    }


            function validateName() {
                var productName = document.getElementById('productName').value.trim();
                var nameError = document.getElementById('nameError');
        
                var namePattern = /^[a-zA-Z][a-zA-Z\s]*$/;
        
                if (!productName || !namePattern.test(productName)) {
                    nameError.textContent = 'invalid name provided';
                } else {
                    nameError.textContent = '';
                }
            }
           
            function validateQuantity() {
                var productQuantity = document.getElementById('productQuantity').value.trim();
                var quantityError = document.getElementById('quantityError');

                var quantityPattern = /^[1-9]\d*$/;

                if (!productQuantity || !quantityPattern.test(productQuantity)) {
                    quantityError.textContent = 'Enter a valid number';
                } else {
                    quantityError.textContent = '';
                }
            }


            function validateColor() {
                var productColor = document.getElementById('productColor').value.trim();
